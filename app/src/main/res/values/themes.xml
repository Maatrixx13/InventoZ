    <!--    TYPOGRAPHY-->

    <style name="Text.Body">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Text.Body.Small">
        <item name="android:textSize">12sp</item>
        <item name="fontFamily">sans-serif-light</item>
    </style>

    <style name="Text.Body.Medium">
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">sans-serif-light</item>
    </style>

    <style name="Text.Body.Large">
        <item name="android:textSize">16sp</item>
    </style>


    <style name="Text.Title.Small">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Text.Title.Medium">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Text.Title.Large">
        <item name="android:textSize">22sp</item>
    </style>

    <style name="Text.Headline">
        <item name="fontFamily">sans-serif-black</item>
    </style>

    <style name="Text.Headline.Small">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="Text.Headline.Medium">
        <item name="android:textSize">28sp</item>
    </style>

    <style name="Text.Headline.Large">
        <item name="android:textSize">32sp</item>
    </style>

    <style name="Text.Link">
        <item name="fontFamily">sans-serif-black</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextViewBold">
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!--    BUTTON-->
    <style name="Button">
        <item name="android:background">@drawable/dr_button_gradient</item>
        <item name="backgroundTint">@null</item>
        <item name="android:padding">8dp</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
    </style>

    <!--    EDIT TEXT-->
    <style name="EditText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">8dp</item>
    </style>
</resources>