<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Invento" parent="Theme.Material3.Light">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/second</item>
        <item name="colorPrimaryVariant">@color/third</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/second</item>
        <item name="colorSecondaryVariant">@color/third</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="ActionBar" parent="Widget.Material3.Light.ActionBar.Solid">
        <item name="background">@color/white</item>
    </style>
    <!--    BOTTOM NAV-->
    <style name="Widget.App.BottomNavigationView" parent="Widget.Material3.BottomNavigationView">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.BottomNavigationView</item>
    </style>

    <style name="ThemeOverlay.App.BottomNavigationView" parent="">
        <item name="colorSurface">@color/third</item>
        <item name="colorOnSurfaceVariant">@color/primary</item>
    </style>
    <!--    CARD VIEW-->
    <style name="ElevatedCardView">
        <item name="android:backgroundTint">@color/white</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="background">?android:attr/selectableItemBackground</item>
    </style>

    <!--    TEXT-->
    <style name="Text">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_black</item>
    </style>

    <style name="Text.White">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Text.Title">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Text.Caption">
        <item name="android:textColor">@color/text_black_transparent</item>
    </style>

    <style name="Text.Description">
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="Text.Header">
        <item name="android:textSize">32sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="Text.Header.Big">
        <item name="android:textSize">42sp</item>
    </style>
    <!--    DIALOG FRAGMENTS-->
    <style name="TransparentDialog">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>



    <!--    TEXT FIELD-->
    <style name="TextField" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/secondary</item>
        <item name="hintTextColor">@color/secondary</item>
        <item name="titleTextColor">@color/secondary</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="boxCornerRadiusBottomStart">16dp</item>
        <item name="boxCornerRadiusBottomEnd">16dp</item>
        <item name="boxCornerRadiusTopStart">16dp</item>
        <item name="boxCornerRadiusTopEnd">16dp</item>
    </style>

    <style name="TextField.Password">
        <item name="endIconMode">password_toggle</item>
        <item name="endIconTint">@color/secondary</item>
    </style>

    <!--    PROGRESS BAR-->
    <style name="ProgressBar">
        <item name="android:visibility">invisible</item>
    </style>

